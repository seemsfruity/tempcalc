import tkinter as tk
from tkinter import messagebox

# Function to convert Fahrenheit temperature to Celsius
def fahrenheit_to_celsius(f):
    return (f - 32) * 5 / 9

# Function to convert Celsius temperature to Fahrenheit
def celsius_to_fahrenheit(c):
    return (c * 9 / 5) + 32

# Function called when the user clicks the 'Calculate' button
# It retrieves the input temperature, validates it, performs the selected conversion,
# and shows the result or error message in a popup dialog
def calculate_temperature():
    temp_input = entry_temp.get() # Get temperature input as string from the entry widget
    try:
        temp_value = float(temp_input) # Convert input to float, may raise ValueError
    except ValueError:
        messagebox.showerror("Invalid input", "Please enter a valid number.")  # Show error message if input is not a valid number
        return
    
    # Check which conversion option is selected by the user
    if conversion_var.get() == "F to C":
         # Convert Fahrenheit to Celsius and show the result
        result = fahrenheit_to_celsius(temp_value)
        messagebox.showinfo("Result", f"{temp_value} 째F is {result:.2f} 째C")
    else:
        # Convert Celsius to Fahrenheit and show the result
        result = celsius_to_fahrenheit(temp_value)
        messagebox.showinfo("Result", f"{temp_value} 째C is {result:.2f} 째F")

# Create the main application window
root = tk.Tk()
root.title("Temperature Calculator")

# Label user to enter temperature
label = tk.Label(root, text="Enter temperature:")
label.pack(pady=5)

# Entry widget to accept temperature input from the user
entry_temp = tk.Entry(root)
entry_temp.pack(pady=5)

# Tkinter variable to hold the state of the conversion option radio buttons
# Default value set to "F to C"
conversion_var = tk.StringVar(value="F to C")
frame = tk.Frame(root)
frame.pack(pady=5)

# Radio button for Fahrenheit to Celsius and vice versa conversion options
radio_f_to_c = tk.Radiobutton(frame, text="Fahrenheit to Celsius", variable=conversion_var, value="F to C")
radio_c_to_f = tk.Radiobutton(frame, text="Celsius to Fahrenheit", variable=conversion_var, value="C to F")
radio_f_to_c.pack(side="left", padx=10)  # Place to the left with horizontal padding
radio_c_to_f.pack(side="left", padx=10) # Place to the left with horizontal padding

# Button that triggers the temperature calculation when clicked
submit_btn = tk.Button(root, text="Calculate", command=calculate_temperature)
submit_btn.pack(pady=10)

# Start the Tkinter event loop to listen for user interactions
root.mainloop()
